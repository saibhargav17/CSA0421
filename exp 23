#include <stdio.h>
#include <dirent.h>

int main() {
    DIR *d = opendir(".");
    if (!d) { perror("opendir"); return 1; }

    struct dirent *entry;
    while ((entry = readdir(d)) != NULL)
        if (entry->d_name[0] != '.')     // hide hidden files
            printf("%s\n", entry->d_name);

    closedir(d);
    return 0;
}
