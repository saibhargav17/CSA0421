#include <stdio.h>
#include <string.h>

int main() {
    char pattern[50], line[200];
    FILE *fp = fopen("input.txt", "r");
    if (!fp) { perror("fopen"); return 1; }

    printf("Enter pattern: ");
    scanf("%s", pattern);

    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, pattern))
            printf("%s", line);
    }

    fclose(fp);
    return 0;
}
